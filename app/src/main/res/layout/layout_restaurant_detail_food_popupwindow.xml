<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="420dp"
    android:background="@drawable/restaurant_detail_popupwindow"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/restaurant_detail_foodpopup_foodiv"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/restaurant_detail_foodpopup_food_nametv"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="锡纸韭菜"
        android:textColor="@color/color_33"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/restaurant_detail_foodpopup_food_saleandratingtv"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="月售134份  好评率94%"
        android:textColor="#7b7b7b"
        android:textSize="10sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/restaurant_detail_foodpopup_moneytv"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:text="￥6"
            android:textColor="@color/recommend_money"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/restaurant_detail_foodpopup_addtocarttv"
            android:layout_width="88dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/fooddetail_shape_corner"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>