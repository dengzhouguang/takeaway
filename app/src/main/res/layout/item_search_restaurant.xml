<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_search_restaurantll"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <ImageView
        android:src="@mipmap/exapmle_logo"
        android:layout_marginLeft="16dp"
        android:id="@+id/item_search_restaurantiv"
        android:layout_width="32dp"
        android:layout_height="32dp" />
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_search_restaurant_nametv"
            android:text="佳斯顿炸鸡汉堡"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/item_search_restaurant_salestv"
            android:textSize="12sp"
            android:textColor="#666666"
            android:text="评价4.4|月售5968单|955m"
            android:layout_width="match_parent"
            android:layout_height="14dp" />
    </LinearLayout>
</LinearLayout>
