<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
         android:id="@+id/ll"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/colorWhite"
         android:orientation="vertical">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/colorMain"
             android:orientation="vertical">



             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:layout_marginBottom="3dp"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:layout_marginTop="3dp"
                 android:gravity="center_vertical"
                 android:orientation="horizontal">

                 <TextView
                     android:id="@+id/item_push1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:singleLine="true"
                     android:text="饺子"
                     android:textColor="@color/colorWhite"
                     android:textSize="12sp" />

                 <View
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1" />

                 <TextView
                     android:id="@+id/item_push2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:singleLine="true"
                     android:text="米粉"
                     android:textColor="@color/colorWhite"
                     android:textSize="12sp" />

                 <View
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1" />

                 <TextView
                     android:id="@+id/item_push3"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:singleLine="true"
                     android:text="驴肉火烧"
                     android:textColor="@color/colorWhite"
                     android:textSize="12sp" />

                 <View
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1" />

                 <TextView
                     android:id="@+id/item_push4"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:singleLine="true"
                     android:text="魏家凉皮"
                     android:textColor="@color/colorWhite"
                     android:textSize="12sp" />

                 <View
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1" />

                 <TextView
                     android:id="@+id/item_push5"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:singleLine="true"
                     android:text="麦当劳"
                     android:textColor="@color/colorWhite"
                     android:textSize="12sp" />

                 <View
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1" />

                 <TextView
                     android:id="@+id/item_push6"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:singleLine="true"
                     android:text="疙瘩汤"
                     android:textColor="@color/colorWhite"
                     android:textSize="12sp" />
             </LinearLayout>
         </LinearLayout>

         <android.support.v4.view.ViewPager
             android:id="@+id/category_viewpager"
             android:layout_width="match_parent"
             android:layout_height="170dp"
             android:layout_marginLeft="6dp"
             android:layout_marginRight="6dp" />

         <net.lucode.hackware.magicindicator.MagicIndicator
             android:id="@+id/category_indicator"
             android:layout_width="wrap_content"
             android:layout_height="16dp"
             android:layout_gravity="center" />

         <View
             android:layout_width="match_parent"
             android:layout_height="10dp"
             android:background="@color/colorGrey" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="32dp"
             android:gravity="bottom"
             android:paddingLeft="10dp"
             android:text="商家推荐"
             android:textColor="@color/colorLightBlack"
             android:textSize="16sp"
             android:textStyle="bold" />
     </LinearLayout>

</android.support.design.widget.CoordinatorLayout>