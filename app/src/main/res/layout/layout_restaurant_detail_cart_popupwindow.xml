<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:maxHeight="430dp"
    android:layout_marginBottom="50dp"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">
   <RelativeLayout
       android:id="@+id/restaurant_detail_popup_cart_title"
       android:layout_width="match_parent"
       android:background="@color/color_ee"
       android:layout_height="28dp">
       <TextView
           android:text="已选商品"
           android:textSize="13sp"
           android:layout_marginStart="16dp"
           android:textColor="@color/color_66"
           android:layout_centerVertical="true"
           android:layout_width="wrap_content"
           android:layout_height="18dp" />
       <LinearLayout
           android:id="@+id/restaurant_detail_popup_cart_deletell"
           android:layout_centerVertical="true"
           android:layout_alignParentEnd="true"
           android:layout_marginEnd="16dp"
           android:layout_width="wrap_content"
           android:gravity="center"
           android:orientation="horizontal"
           android:layout_height="18dp">
           <ImageView
               android:src="@mipmap/restaurant_detail_popup_cart_delete"
               android:layout_width="13dp"
               android:layout_height="13dp" />
           <TextView
               android:layout_marginStart="3dp"
               android:text="清空"
               android:textSize="13sp"
               android:layout_width="wrap_content"
               android:layout_height="18dp" />
       </LinearLayout>
   </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/restaurant_detail_popup_cart_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_detail_popup_cart_title" />
</RelativeLayout>