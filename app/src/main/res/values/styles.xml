<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="bnve_white_bg">
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="ToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/animation_show</item>
        <item name="android:windowExitAnimation">@anim/animation_hide</item>
    </style>

    <style name="PopupWindowAnimationFavourable">
        <item name="android:windowEnterAnimation">@anim/animation_favourable_show</item>
        <item name="android:windowExitAnimation">@anim/animation_favourable_hide</item>
    </style>

    <style name="PopupWindowAnimationFood">
        <item name="android:windowEnterAnimation">@anim/animation_food_show</item>
        <item name="android:windowExitAnimation">@anim/animation_food_hide</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/five_rating_bar</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>
</resources>
